state:
  user_input = signal("")

stream replies from "/api/stream/chat"

route "/" do
  html:
    head:
      title "Chat"
    body:
      h1 "NitroChat"

      form { method: "POST", action: "/api/chat" }
        input { name: "message", bind: user_input }
        button "Send"

      ul:
        for msg in replies:
          li "#{msg.text}"

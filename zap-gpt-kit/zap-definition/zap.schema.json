{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Zap App Definition",
    "type": "object",
    "properties": {
      "auth": {
        "type": "object",
        "properties": {
          "provider": { "type": "string", "enum": ["email", "github"] },
          "roles": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["provider"]
      },
      "db": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "api": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE"] },
            "path": { "type": "string" },
            "public": { "type": "boolean" },
            "handler": { "type": "string" }
          },
          "required": ["method", "path", "handler"]
        }
      },
      "events": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "trigger": {
              "type": "string",
              "pattern": "^(cron\\.|auth\\.|db\\.|webhook\\.).+$"
            },
            "handler": { "type": "string" }
          },
          "required": ["trigger", "handler"]
        }
      }
    },
    "required": ["db", "api"]
  }
  